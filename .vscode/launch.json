{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Hexo (9229)",
      "type": "pwa-node",
      "request": "attach",
      "port": 9229,
      "restart": false,
      "skipFiles": ["<node_internals>/**"],
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "preLaunchTask": "run-hexo-and-open",
      "protocol": "inspector",
      "console": "integratedTerminal"
    }
  ]
}
