<!--
  page.ejs
  通用页面模板（Hexo 主题使用）
  功能：
    - 显示页面标题、副标题（可选）、日期（可选）
    - 渲染页面正文内容（Markdown 转换后的 HTML）
    - 页脚信息（版权、Powered by）
    - 外层布局（导航、侧边栏）由 layout.ejs 提供
-->

<article class="page-article">
  <!-- 标题区：如果有 title 就渲染 -->
  <% if (page.title) { %>
    <header class="page-header">
      <!-- 页面标题 -->
      <h1 class="page-title"><%= page.title %></h1>

      <!-- 副标题（可选，来自 front-matter 的 subtitle 字段） -->
      <% if (page.subtitle) { %>
        <p class="page-subtitle"><%= page.subtitle %></p>
      <% } %>

      <!-- 日期（可选，来自 front-matter 的 date 字段） -->
      <% if (page.date) { %>
        <p class="page-meta">发布于 <%= date(page.date, 'YYYY-MM-DD') %></p>
      <% } %>
    </header>
  <% } %>

  <!-- 页面正文内容（Markdown 渲染结果） -->
  <div class="page-content">
    <%- page.content %>
  </div>

  <!-- 页脚：如果 simpleLayout 未开启，则显示版权信息 -->
  <% if (!page.simpleLayout) { %>
    <footer class="page-footer">
      <p>
        © <%= new Date().getFullYear() %> <%= config.author %> |
        Powered by <a href="https://hexo.io" target="_blank">Hexo</a> &
        <a href="https://vercel.com" target="_blank">Vercel</a>
      </p>
    </footer>
  <% } %>
</article>

<!-- 可选脚本：可在这里写页面交互逻辑 -->
<script>
  // 例如：滚动到顶部按钮、动态效果等
</script>
