<aside class="sidebar" id="sidebar">
  <!-- ============================
       侧边栏模块
       功能：
         - 自动读取 Hexo 分类数据
         - 自动读取 Hexo 标签数据
         - 渲染为分类导航和标签云
  ============================ -->

  <!-- 分类导航 -->
  <h3 class="sidebar-title">📘 分类导航</h3>
  <ul class="category-list">
    <% if (site.categories && site.categories.length) { %>
      <% site.categories.sort('name').forEach(function(cat){ %>
        <li>
          <a href="<%= url_for(cat.path) %>">
            <span class="sidebar-name"><%= cat.name %></span>
            <span class="sidebar-count"><%= cat.length %></span>
          </a>
        </li>
      <% }); %>
    <% } else { %>
      <li>暂无分类</li>
    <% } %>
  </ul>

  <!-- 分割线 -->
  <div class="sidebar-divider"></div>

  <!-- 标签云 -->
  <h3 class="sidebar-title">🏷️ 标签云</h3>
  <ul class="tag-list">
    <% if (site.tags && site.tags.length) { %>
      <% site.tags.sort('name').forEach(function(tag){ %>
        <li>
          <a href="<%= url_for(tag.path) %>">
            <span class="sidebar-name"><%= tag.name %></span>
            <span class="sidebar-count"><%= tag.length %></span>
          </a>
        </li>
      <% }); %>
    <% } else { %>
      <li>暂无标签</li>
    <% } %>
  </ul>
</aside>
