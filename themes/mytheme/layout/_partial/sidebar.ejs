<aside class="sidebar" id="sidebar">
  <!-- ============================
       侧边栏模块
       功能：
         - 自动读取 Hexo 分类数据
         - 自动读取 Hexo 标签数据
         - 渲染为分类导航和标签云
  ============================ -->

  <!-- 分类导航 -->
  <details class="sidebar-widget" open>
    <summary class="sidebar-title">📘 分类导航</summary>
    <ul class="category-list">
      <% if (site.categories && site.categories.length) { %>
        <% site.categories.sort('name').forEach(function(cat){ %>
          <li>
            <a href="<%= url_for(cat.path) %>">
              <span class="sidebar-name"><%= cat.name %></span>
              <span class="sidebar-count"><%= cat.length %></span>
            </a>
          </li>
        <% }); %>
      <% } else { %>
        <li>暂无分类</li>
      <% } %>
    </ul>
  </details>

  <!-- 分割线 -->
  <div class="sidebar-divider"></div>

  <!-- 标签云 -->
  <details class="sidebar-widget" open>
    <summary class="sidebar-title">🏷️ 标签云</summary>
    <ul class="tag-list">
      <% if (site.tags && site.tags.length) { %>
        <% site.tags.sort('name').forEach(function(tag){ %>
          <li>
            <a href="<%= url_for(tag.path) %>">
              <span class="sidebar-name"><%= tag.name %></span>
              <span class="sidebar-count"><%= tag.length %></span>
            </a>
          </li>
        <% }); %>
      <% } else { %>
        <li>暂无标签</li>
      <% } %>
    </ul>
  </details>

  <div class="sidebar-divider"></div>

  <details class="sidebar-widget" open>
    <summary class="sidebar-title">📚 学习资料</summary>
    <ul class="study-list">
      <li>
        <select id="file-type-select" style="width: 100%; padding: 6px 8px; border-radius: 6px; border: 1px solid #cbd5e1; font-size: 0.85rem;">
          <option value="pdf">PDF 文件</option>
          <option value="image">图片文件</option>
        </select>
      </li>
      <li>
        <button type="button" id="pdf-upload-btn" style="width: 100%; padding: 8px 12px; border-radius: 6px; border: none; background: #0f766e; color: #fff; cursor: pointer; font-size: 0.9rem;">上传文件</button>
      </li>
      <li>
        <input type="file" id="pdf-upload-input" accept="application/pdf" style="width: 100%; margin-top: 8px; font-size: 0.85rem;">
      </li>
    </ul>
    <ul class="pdf-list" id="pdf-list">
      <li>暂无学习资料</li>
    </ul>
  </details>
</aside>
